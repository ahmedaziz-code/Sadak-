{% extends 'content_base.html.twig' %}

{% block title %}Manage Comments{% endblock %}

{% block content_class %}{{ parent() }} show-article-container-border-green{% endblock %}

{% block content_body %}
    <div class="row">
        <div class="col-sm-12">
            <h1>Commentaires ({{ pagination.getTotalItemCount }})</h1>
            <form>
                <div class="input-group mb-3">
                    <input type="text"
                           name="q"
                           class="form-control"
                           placeholder="Search..."
                           value="{{ app.request.query.get('q') }}"
                    >
                    <div class="input-group-append">
                        <button type="submit"
                                class="btn btn-outline-secondary">
                            <span class="fa fa-search"></span>
                        </button>
                    </div>
                </div>
            </form>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Evenement</th>
                    <th>Auteur</th>
                    <th>Commentaire</th>
                    <th>Cr√©e</th>
                </tr>
                </thead>
                <tbody>
                {% for comment in pagination %}
                    <tr>
                        <td>
                            <a href="{{ path('event_show', {'slug': comment.event.slug}) }}">
                                {{ comment.event.eventName }}
                            </a>
                        </td>
                        <td>
                            {{ comment.OrganiserName }}
                        </td>
                        <td style="width: 20%;">
                            {{ comment.content| truncate}}
                        </td>
                        <td>
                                                        {{ comment.createdAt|ago }}
                        </td>
                    </tr>

                {% else %}
                    <tr>
                        <td colspan="4" class="txt-center">
                            Aucun Commentaire
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {{ knp_pagination_render(pagination) }}
        </div>

    </div>

{% endblock %}

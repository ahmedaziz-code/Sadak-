{% extends '/backAdmin/back-office/tables.html.twig' %}

{% block admin %}
    <h1>All Users {{ users.getTotalItemCount }} </h1>
    <form>
        <div class="input-group mb-3">
            <input type="text"
                   name="q"
                   class="form-control"
                   placeholder="Search..."
                   value="{{ app.request.query.get('q') }}"
            >
            <div class="input-group-append">
                <button type="submit"
                        class="btn btn-outline-secondary">
                    <span class="fa fa-search"></span>
                </button>
            </div>
        </div>
    </form>
    <table border="1" class="table" style="margin: auto">
        <thead>
        <tr>

            <td>Nom</td>
            <td>Prenom</td>
            <td>Email</td>
            <td>Gouvernorat</td>
            <td>Ville</td>
            <td>Supprimer</td>
            <td>Modifier</td>
        </tr>
        </thead>
        <tbody>

        {% for i in users %}
            <tr >


                <td>{{ i.firstName }}</td>
                <td>{{ i.lastName }}</td>
                <td>{{ i.email}}</td>
                <td>{{ i.gouvernorat }}</td>
                <td>{{ i.ville }}</td>
                <td><a href="">
                        <img src="data:image/png;base64,"/>
                    </a></td>
                <td><a href="">
                        <img src="data:image/png;base64,"/>
                    </a></td>


            </tr>
        {% endfor %}
        </tbody>

    </table>
    {{ knp_pagination_render(users) }}

{% endblock %}
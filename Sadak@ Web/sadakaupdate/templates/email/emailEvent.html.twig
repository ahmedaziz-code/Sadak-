{% apply inky_to_html|inline_css(source('@style/foundation-emails.css'), source('@style/email.css'))%}
    <container>
        <row class="header">
            <columns>
                <img src="{{  email.image('@image/SADAKA@.png')}}" class="logo" alt="Sadak@ Logo">
            </columns>
        </row>
        <row class="welcome">
            <columns>
                <spacer size="35"></spacer>
                <h1>
                    <center>
                        Nice to meet you {{ email.toName }}!
                    </center>
                </h1>
                <spacer size="10"></spacer>
            </columns>
        </row>
        <spacer size="30"></spacer>

        <row>
            <columns>
                <center>
                    <button href="{{ url('RemarqueFamille1') }}">Lister les FAMILLES!</button>
                </center>
            </columns>
        </row>
        <row class="bottom">
            <columns>
                <center>
                    <spacer size="20"></spacer>
                    <div>
                        Sent with ❤️ from SADAK@
                    </div>
                </center>
            </columns>
        </row>
    </container>
{% endapply %}